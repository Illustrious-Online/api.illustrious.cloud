{
  "name": "api.illustrious.cloud",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/app.ts",
    "start": "NODE_ENV=production bun src/app.ts",
    "start:docker": "docker-compose -f docker-compose.app.yml up",
    "db:docker": "docker compose -f docker-compose.db.yml up",
    "db:reset": "./src/utils/reset-db.sh",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "lint": "bunx @biomejs/biome lint --apply ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "check": "bunx @biomejs/biome check ./src",
    "check:apply": "bunx @biomejs/biome check --apply ./src",
    "test": "./src/utils/run-tests.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.0.2",
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/swagger": "^1.0.5",
    "@sentry/bun": "^7.113.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "elysia": "latest",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.13.0",
    "@types/node": "^20.12.10",
    "@types/pg": "^8.11.6",
    "@types/qs": "^6.9.15",
    "@types/uuid": "^9.0.8",
    "axios": "^1.6.8",
    "bun-types": "latest",
    "drizzle-kit": "^0.21.0",
    "husky": "^9.0.11",
    "jwks-rsa": "^3.1.0",
    "postgres": "^3.4.4",
    "qs": "^6.12.1",
    "semantic-release": "^23.0.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1",
    "yoctocolors": "^2.0.0"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "module": "src/app.ts"
}
